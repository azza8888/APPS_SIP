<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/tv_idlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:padding="5dp">


        <!--<ImageView-->
            <!--android:id="@+id/iv_list"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="250dp"-->
            <!--android:padding="4dp"-->
            <!--android:layout_margin="2dp"-->
            <!--android:layout_marginRight="2dp"/>-->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="#39aae9"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="8dp"
            android:layout_margin="4dp">
        <!--<Button-->
            <!--android:id="@+id/btn_nopel"-->
            <!--android:background="@drawable/ripple_effect"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:backgroundTint="#39aae9"-->
            <!--android:text="Nomer Laporan"/>-->
            <TextView
                android:id="@+id/tv_nosurat"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="17dp"
                android:background="@drawable/ripple_effect"
                android:text="NOMOR SURAT"/>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:layout_margin="2dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="nama_pemeriksa 1 :"
                android:textSize="18dp" />
            <EditText
                android:id="@+id/et_namap1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Pemeriksa1"
                android:textSize="18sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="2dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="nama_pemeriksa 2    :"
                android:textSize="18sp" />
            <EditText
                android:id="@+id/et_namap2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pemeriksa2"
                android:textSize="18sp"/>

        </LinearLayout>





</LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>