<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="6dp">

    <TextView
        android:id="@+id/tv_idlistrw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#73ADA5A5"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="8dp"
            android:layout_margin="4dp">
            <TextView
                android:background="@android:color/transparent"
                android:id="@+id/tv_nosuratrw"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="17dp"
                android:text="NOMOR SURAT"/>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:layout_margin="2dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textStyle="bold"
                android:text="Nama Pemeriksa 1   "
                android:textSize="18dp" />


        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#73ADA5A5"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:background="@android:color/transparent"
                style="@style/Widget.CardContent"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <EditText
                    android:id="@+id/et_namap1rw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pemeriksa1"
                    android:enabled="false"
                    android:background="@android:color/transparent"
                    android:inputType="textPersonName|textMultiLine"
                    android:textSize="20sp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="2dp"
            android:layout_margin="2dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textStyle="bold"
                android:text="Nama Pemeriksa 2    "
                android:textSize="18sp" />

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#73ADA5A5">

            <LinearLayout
                android:background="@android:color/transparent"
                style="@style/Widget.CardContent"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <EditText
                    android:id="@+id/et_namap2rw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pemeriksa2"
                    android:enabled="false"
                    android:background="@android:color/transparent"
                    android:inputType="textPersonName|textMultiLine"
                    android:textSize="20sp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginRight="5dp"
                android:textStyle="bold"
                android:text="Status Pemeriksaan"
                android:textSize="18sp" />


        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_marginLeft="200dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#73ADA5A5"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:background="@android:color/transparent"
                style="@style/Widget.CardContent"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_statusrw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:gravity="center"
                    android:textColor="#34DB17"
                    android:enabled="false"
                    android:background="@android:color/transparent"
                    android:inputType="textPersonName|textMultiLine"
                    android:textSize="20sp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v7.widget.CardView>
</LinearLayout>