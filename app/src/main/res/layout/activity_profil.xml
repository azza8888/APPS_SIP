<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    tools:context=".pengguna.ProfilActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tabs_profils"
        app:titleTextColor="@color/white"
        android:background="@color/colorPrimaryDark"
        android:theme="@style/Base.Theme.AppCompat">

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        app:cardBackgroundColor="#ccc3c3"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:padding="19dp"
                android:focusableInTouchMode="true"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/et_tokenpsr"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:visibility="invisible"
                    tools:ignore="Suspicious0dp" />
                <EditText
                    android:id="@+id/et_idprs"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:visibility="invisible"
                    tools:ignore="Suspicious0dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/cv_profilsr"
                    android:layout_width="119dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_mode_edit_black_24dp"
                    app:civ_border_color="@color/Black"
                    android:layout_gravity="center"
                    app:civ_border_width="2dp"
                    app:civ_circle_background_color="@color/Black" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:backgroundTint="@color/Black"
                        android:background="@drawable/ic_code_black_24dp"/>
                    <EditText
                        android:id="@+id/et_nip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="NIP"
                        android:enabled="false"
                        android:layout_marginLeft="10sp"
                        android:textColorHint="@color/Black"
                        android:textSize="18sp"
                        android:inputType="textPersonName"
                        android:textColor="@color/Black"
                        android:backgroundTint="@color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:backgroundTint="@color/Black"
                        android:background="@drawable/ic_person_black_24dp"/>
                    <EditText
                        android:id="@+id/et_namap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="EzaTech"
                        android:enabled="false"
                        android:layout_marginLeft="10sp"
                        android:textColorHint="@color/Black"
                        android:textSize="18sp"
                        android:inputType="textPersonName"
                        android:textColor="@color/Black"
                        android:backgroundTint="@color/white"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:backgroundTint="@color/Black"
                        android:background="@drawable/ic_person_black_24dp"/>
                    <EditText
                        android:id="@+id/et_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="EzaTech"
                        android:enabled="false"
                        android:layout_marginLeft="10sp"
                        android:textColorHint="@color/Black"
                        android:textSize="18sp"
                        android:inputType="textPersonName"
                        android:textColor="@color/Black"
                        android:backgroundTint="@color/white"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:backgroundTint="@color/Black"
                        android:background="@drawable/ic_email_white_24dp"/>

                    <EditText
                        android:id="@+id/et_emailp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Ezatech@gmail.com"
                        android:enabled="false"
                        android:backgroundTint="@color/white"
                        android:textSize="18sp"
                        android:textColorHint="@color/Black"
                        android:layout_marginLeft="10sp"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/Black"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:background="@drawable/ic_portrait_black_24dp"/>

                    <EditText
                        android:id="@+id/et_jabatan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Jabatan"
                        android:enabled="false"
                        android:textSize="18sp"
                        android:layout_marginLeft="10sp"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/Black"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:backgroundTint="@color/Black"
                        android:background="@drawable/departemen_24"/>

                    <EditText
                        android:id="@+id/et_departemen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="departemen"
                        android:enabled="false"
                        android:textSize="18sp"
                        android:layout_marginLeft="10sp"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/Black"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:backgroundTint="@color/Black"
                        android:background="@drawable/ic_class_black_24dp"/>

                    <EditText
                        android:id="@+id/et_wewenang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="wewenang"
                        android:enabled="false"
                        android:textSize="18sp"
                        android:layout_marginLeft="10sp"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/Black"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <Button
                        android:id="@+id/btn_simpanpsr"
                        android:layout_gravity="center"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimary"
                        android:text="EDIT"
                        android:background="@drawable/ripple_effect"/>

                    <!--<Button-->
                        <!--android:id="@+id/btn_edit"-->
                        <!--android:layout_gravity="center"-->
                        <!--android:layout_width="150dp"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:textSize="18sp"-->
                        <!--android:textColor="@color/colorPrimary"-->
                        <!--android:text="EDIT DATA"-->
                        <!--android:background="@drawable/ripple_effect"/>-->
                </RelativeLayout>


            </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>
</LinearLayout>