<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".logRes.CreatePassActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tabs_createPass"
        app:titleTextColor="@color/Black"
        android:background="@color/colorPrimaryDark"
        android:theme="@style/Base.Theme.AppCompat">

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:background="@mipmap/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:backgroundTint="@color/Black"
                    android:background="@drawable/ic_email_black_24dp"/>
                <EditText
                    android:id="@+id/et_emailCreate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:layout_marginLeft="5sp"
                    android:textColorHint="@color/Black"
                    android:textSize="18sp"
                    android:inputType="textPersonName"
                    android:textColor="@color/Black"
                    android:backgroundTint="@color/white"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:backgroundTint="@color/Black"
                    android:background="@drawable/ic_lock_black_24dp"/>
                <EditText
                    android:id="@+id/et_passwordCreate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="password"
                    android:layout_marginLeft="5sp"
                    android:textColorHint="@color/Black"
                    android:textSize="18sp"
                    android:inputType="textPassword"
                    android:textColor="@color/Black"
                    android:backgroundTint="@color/white"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:backgroundTint="@color/Black"
                    android:background="@drawable/ic_lock_black_24dp"/>
                <EditText
                    android:id="@+id/et_passwordConfirmCreate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password Confirmation"
                    android:password="true"
                    android:layout_marginLeft="5sp"
                    android:textColorHint="@color/Black"
                    android:textSize="18sp"
                    android:inputType="textPassword"
                    android:textColor="@color/Black"
                    android:backgroundTint="@color/white"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:backgroundTint="@color/Black"
                    android:background="@drawable/ic_info_black_24dp"/>
                <EditText
                    android:id="@+id/et_tokenCreate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Token"
                    android:layout_marginLeft="5sp"
                    android:textColorHint="@color/Black"
                    android:textSize="18sp"
                    android:inputType="textPersonName"
                    android:textColor="@color/Black"
                    android:backgroundTint="@color/white"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/btn_simpanCreate"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:text="Simpan"
            android:background="@drawable/ripple_effect"/>


    </LinearLayout>

</LinearLayout>